unit Unit3;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.OleCtrls, SHDocVw,
  Vcl.ExtCtrls;

type
  TForm3 = class(TForm)
    WebBrowser1: TWebBrowser;
    RadioGroup1: TRadioGroup;
    procedure RadioGroup1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form3: TForm3;
  f:text;

implementation

{$R *.dfm}

uses Unit1;



procedure TForm3.RadioGroup1Click(Sender: TObject);
var
  FileName: String;
  AppPath: String;
begin
  AppPath := ExtractFilePath(Application.ExeName);

  case RadioGroup1.ItemIndex of
    0: FileName := 'file://' + AppPath + 'Presentation\Программы-стилеры.html'; // Путь к файлу 1
    1: FileName := 'file://' + AppPath + 'Presentation\Смишинг.html';
    2: FileName := 'file://' + AppPath + 'Presentation\Фишинг.html'; // Путь к файлу 2
    // добавьте другие варианты выбора файлов по мере необходимости
  end;

  WebBrowser1.Navigate(FileName);
end;

end.
